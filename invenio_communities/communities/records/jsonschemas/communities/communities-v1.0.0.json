{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "local://communities/community-v1.0.0.json",
  "additionalProperties": false,
  "title": "Invenio Community Schema v1.0.0",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "JSONSchema declaration.",
      "type": "string"
    },
    "id": {
      "description": "Community identifier.",
      "type": "string"
    },
    "pid": {"$ref": "local://records/definitions-v1.0.0.json#/internal-pid"},

    "access": {
      "type": "object",
      "description": "Resource metadata.",
      "additionalProperties": false,
      "properties": {
        "owned_by": {
          "description": "List of owners of the child records.",
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "local://records/definitions-v1.0.0.json#/agent"}
        },

        "visibility": {
          "description": "Community visibility.",
          "enum": [
            "public",
            "restricted"
          ]
        },
        "member_policy": {
          "description": "Community member policy.",
          "enum": [
            "open",
            "closed"
          ]
        },
        "record_policy": {
          "description": "Community record policy.",
          "enum": [
            "open",
            "closed",
            "restricted"
          ]
        }
      }
    },

    "metadata": {
      "type": "object",
      "description": "Resource metadata.",
      "additionalProperties": false,
      "properties": {
        "title": {
          "description": "Community title.",
          "type": "string"
        },
        "description": {
          "description": "Community description.",
          "type": "string"
        },
        "type": {
          "description": "Community type.",
          "enum": [
            "organization",
            "event",
            "topic",
            "project"
          ]
        },
        "curation_policy": {
          "description": "Community curation policy.",
          "type": "string"
        },
        "page": {
          "description": "Community page.",
          "type": "string"
        },
        "website": {
          "description": "Community website.",
          "type": "string"
        },
        "funding": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "funder": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {"type": "string"},
                  "identifier": {"$ref": "local://records/definitions-v1.0.0.json#/identifier"},
                  "scheme": {"$ref": "local://records/definitions-v1.0.0.json#/scheme"}
                }
              },
              "award": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": {"type": "string"},
                  "number": {"type": "string"},
                  "identifier": {"$ref": "local://records/definitions-v1.0.0.json#/identifier"},
                  "scheme": {"$ref": "local://records/definitions-v1.0.0.json#/scheme"}
                }
              }
            }
          }
        },
        "organizations": {
          "$ref": "local://records/definitions-v1.0.0.json#/affiliations"
        }
      }
    },

    "files": {
      "type": "object",
      "description": "Files associated with the record",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Set to false for metadata only records."
        }
      }
    }
  }
}
